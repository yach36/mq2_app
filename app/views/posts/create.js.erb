<!-- fadeTime -->
var fadeTime = 240;
<!--モーダル非表示-->
var modalHide = () => {
    $(".js_modal-wrapper").fadeOut(fadeTime);
    $(".js_wrapper").animate({
      opacity: 1
    },
    fadeTime);
    $(".js_body").css({
      overflowY: "scroll"
    });
    $(".js_wrapper").css({
      pointerEvents: "auto",
    });
    $(".js_post-button").animate({
      right: "16px"
    },
    fadeTime);
};
<!-- モーダル非表示実行 -->
modalHide();
<!-- 投稿一覧を表示 -->
$(".js_template-wrapper").html("<%= j(render "posts/index", posts: @posts) %>");