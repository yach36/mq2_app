<!-- トラックIDを保存 -->
var trackId = "<%= @track_id %>";
var trackImage = "<%= @track_image %>";
var trackName = "<%= @track_name %>";
var trackArtist = "<%= @track_artist %>";
console.log(trackId);
<!-- 取得した曲IDをパラメータに設定 -->
$(".posts_form_hidden").attr("value", trackId);
<!-- 検索入力欄を無効にする -->
$(".posts_form_text").attr("disabled", "disabled");
<!-- 選択済み画面を表示 -->
$(".posts_form_tracks").html(`
  <div class="posts_selected-track_item">
    <div class="posts_selected-track_img-wrapper">
      <img class="posts_selected-track_img" src="${trackImage}" />
    </div>
    <div class="posts_selected-track_info-wrapper">
      <p class="posts_selected-track_name">${trackName}</p>
      <p class="posts_selected-track_artist">${trackArtist}</p>
    </div>
    <%= image_tag "icon_check.svg", class: "posts_selected-track_icon" %>
  </div>
`);