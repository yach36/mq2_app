<!-- fadeTime -->
var fadeTime = 240;
<!--モーダル非表示-->
var modalHide = () => {
    $(".js_modal-wrapper").fadeOut(fadeTime);
    $(".js_wrapper").animate({
      opacity: 1
    },
    fadeTime);
    $(".js_body").removeClass("is_hidden");
    $(".js_wrapper").removeClass("is_disabled");
    $(".js_post-button").animate({
      right: "16px"
    },
    fadeTime);
};
<!--モーダル非表示実行-->
modalHide();