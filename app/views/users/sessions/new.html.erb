<div class="users_signin">
  <div class="users_signin-inner">
    <h2 class="users_signin_head">MusiQにログインしよう！</h2>
    <%= form_with model: @user, url: new_user_session_path, class: "users_signin_form" do |f| %>
      <div class="users_signin_form-group">
        <%= f.label :account_id, "アカウントID", class: "users_signin_label" %>
        <%= f.text_field :account_id, autofocus: true, autocomplete: "email", class: "users_signin_text-field", placeholder: "@musiqTarou" %>
      </div>
      <div class="users_signin_form-group">
        <%= f.label :password, "パスワード", class: "users_signin_label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "users_signin_text-field" %>
      </div>
      <div class="users_signin_btn-group">
        <%= f.submit "ログインする", class: "users_signin_btn-submit" %>
        <%= link_to "新規アカウントを作成する", new_registration_path(resource_name), class: "users_signin_link-signup" %>
      </div>
    <% end %>
  </div>
  <!--/.users_signin-inner-->
</div>
<!--/.users_signin-->
